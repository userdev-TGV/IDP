# ===========================================
# CONFIGURACIÓN OBLIGATORIA - Azure AI Document Intelligence
# ===========================================
AZURE_ENDPOINT=https://tu-recurso-documentintelligence.cognitiveservices.azure.com/
AZURE_KEY=tu_clave_documentintelligence_aqui

# ===========================================
# CONFIGURACIÓN OBLIGATORIA - OpenAI (elige una opción)
# ===========================================
# Opción 1: OpenAI directo
OPENAI_API_KEY=tu_clave_openai_aqui
OPENAI_ASSISTANT_ID=tu_assistant_id_opcional

# Opción 2: Azure OpenAI (alternativa a OpenAI directo)
AZURE_OPENAI_API_KEY=tu_clave_azure_openai_aqui
AZURE_OPENAI_ENDPOINT=https://tu-recurso-openai.openai.azure.com/

# ===========================================
# CONFIGURACIÓN OBLIGATORIA - Base de Datos Azure SQL
# ===========================================
AZURE_SQL_CONNECTION_STRING=Driver={ODBC Driver 17 for SQL Server};Server=tcp:tu-sqlserver.database.windows.net,1433;Database=TU-BD;Uid=tu_usuario;Pwd=tu_contraseña;Encrypt=yes;TrustServerCertificate=no;Connection Timeout=300;
AZURE_SQL_AUTH_CONNECTION_STRING=Driver={ODBC Driver 17 for SQL Server};Server=tcp:tu-sqlserver.database.windows.net,1433;Database=TU-BD-AUTH;Uid=tu_usuario;Pwd=tu_contraseña;Encrypt=yes;TrustServerCertificate=no;Connection Timeout=300;

AZURE_SUBSCRIPTION_ID=tu_subscription_id
AZURE_RESOURCE_GROUP=tu_resource_group
AZURE_SQL_SERVER_NAME=tu-sqlserver  # Opcional
AZURE_SQL_DATABASE_NAME=TU-BD  # Opcional, se extrae de la connection string

# ===========================================
# CONFIGURACIÓN OPCIONAL - SharePoint/MSAL
# ===========================================
# Para descargar archivos desde SharePoint
AZURE_TENANT_ID=tu_tenant_id
AZURE_CLIENT_ID=tu_client_id
AZURE_CLIENT_SECRET=tu_client_secret

# URL específica del archivo de SharePoint (opcional)
SHAREPOINT_FILE_URL=https://tu-dominio.sharepoint.com/Shared%20Documents/ejemplo.pdf

# ===========================================
# FRONTEND
# ===========================================
# Cambia esto si tu API no se sirve en http://localhost:8000
VITE_API_BASE=http://localhost:8000
